{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  },
  "prHourlyLimit": 10,
  "packageRules": [
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    }
  ],
  "regexManagers": [
    {
      "matchStrings": [
        "source:\\n.*chart: (?<depName>.*)\\n.*repoURL: (?<registryUrl>.*)\\n.*targetRevision: (?<currentValue>.*)"
      ],
      "fileMatch": ["\\.yaml$", "\\.yml$"],
      "datasourceTemplate": "helm"
    }
  ]
}
