{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessagePrefix": "[DEVOPS-1094]",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  },
  "prHourlyLimit": 100,
  "prConcurrentLimit": 15,
  "helmv3": {
    "fileMatch": ["(^|/)Chart\\.yaml$"]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    },
    {
      "matchFileNames": [
        "envs/dev/**"
      ],
      "labels": ["dev"],
      "additionalBranchPrefix": "dev-{{parentDir}}-"
    },
    {
      "matchFileNames": [
        "envs/prod/**"
      ],
      "labels": ["production"],
      "additionalBranchPrefix": "prod-{{parentDir}}-"
    },
    {
      "matchManagers": ["helmv3"],
      "groupName": null,
      "separateMajorMinor": true,
      "separateMinorPatch": false
    }
  ]
}
