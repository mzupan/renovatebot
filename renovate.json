{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  },
  "prHourlyLimit": 10,
  "github-actions": {
    "enabled": true,
    "labels": [
      "dependencies",
      "github-actions"
    ]
  },
  "helm-requirements": {
    "enabled": true,
    "fileMatch": [
      "^environments/**/Chart\\.yaml$"
    ],
    "labels": [
      "dependencies",
      "helm"
    ]
  },
  "helm-values": {
    "enabled": true,
    "fileMatch": [
      "^environments/**/values\\.yaml$"
    ],
    "labels": [
      "dependencies",
      "helm"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^environments/.+/Chart\\.yaml$"
      ],
      "matchStrings": [
        "version:\\s*(?<currentValue>.*?)\n\\s+repository:\\s*(?<registryUrl>.*?)\n"
      ],
      "depNameTemplate": "{{{depName}}}",
      "datasourceTemplate": "helm"
    }
  ]
}
