{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "addLabels": ["security"]
  },
  "prHourlyLimit": 10,
  "enabledManagers": [
    "dockerfile",
    "github-actions",
    "helm-values",
    "helmv3",
    "helm-requirements",
    "kubernetes",
    "terraform"
  ],
  "github-actions": {
    "enabled": true,
    "labels": [
      "dependencies",
      "github-actions"
    ]
  },
  "helm-requirements": {
    "enabled": true,
    "labels": [
      "dependencies",
      "helm-requirements"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    }
  ]
}
